<% if flash.any? %>
  <div class="flex justify-center mb-4" x-data="{ show: true }" x-show="show" x-init="setTimeout(() => show = false, 3000)">
    <div class="w-full max-w-4xl">
      <% flash.each do |type, message| %>
        <%
          border_class = case type.to_sym
          when :notice
            "border-black"
          when :alert, :error
            "border-red-600"
          else
            "border-black"
          end

          icon_color = case type.to_sym
          when :notice
            "text-black"
          when :alert, :error
            "text-red-600"
          else
            "text-black"
          end
        %>
        <div class="<%= border_class %> border-[3px] bg-white p-4 mb-4">
          <div class="flex items-center">
            <div class="flex-shrink-0 mr-3">
              <% if type.to_sym == :notice %>
                <svg class="h-5 w-5 <%= icon_color %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              <% elsif [:alert, :error].include?(type.to_sym) %>
                <svg class="h-5 w-5 <%= icon_color %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-black"><%= message %></p>
            </div>
            <div class="ml-4">
              <button @click="show = false" type="button" class="inline-flex text-gray-600 hover:text-black focus:outline-none transition-colors cursor-pointer">
                <span class="sr-only">Close</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
